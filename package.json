{
  "name": "the-wise-pad",
  "version": "1.0.0",
  "description": "Project built to learn clean architecture with nodejs and typescript",
  "main": "index.js",
  "scripts": {
    "test": "jest --silent --noStackTrace --runInBand",
    "test-verbose": "jest --runInBand",
    "test-unit": "npm test -- --watch -c jest-unit-config.js",
    "test-integration": "npm test -- --watch -c jest-integration-config.js",
    "test-staged": "npm test -- --findRelatedTests",
    "test-ci": "npm test -- --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Matheus-IT/the-wise-pad.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Matheus-IT/the-wise-pad/issues"
  },
  "homepage": "https://github.com/Matheus-IT/the-wise-pad#readme",
  "dependencies": {
    "git-commit-msg-linter": "^3.2.8"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.6.0",
    "jest": "^27.4.7",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
