{
  "name": "the-wise-pad",
  "version": "1.0.0",
  "description": "Project built to learn clean architecture with nodejs and typescript",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test-verbose": "jest --passWithNoTests --runInBand",
    "test-unit": "npm test -- --watch -c jest-unit-config.js",
    "test-integration": "npm test -- --watch -c jest-integration-config.js",
    "test-staged": "npm test -- --findRelatedTests",
    "test-ci": "npm test -- --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Matheus-IT/the-wise-pad.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Matheus-IT/the-wise-pad/issues"
  },
  "homepage": "https://github.com/Matheus-IT/the-wise-pad#readme",
  "dependencies": {
    "express": "^4.17.2",
    "git-commit-msg-linter": "^3.2.8",
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.6.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
